set ambiwidth=double
set nu
set sm
set expandtab
set shiftwidth=4
set softtabstop=4
set tabstop=4
set showmatch
"set laststatus=2
"set statusline=%<%f\ %m%r%h%w%{'['.(&fenc!=''?&fenc:&enc).']['.&ff.']'}%=%l,%c%V%8P

"set encoding=euc-jp
"set termencoding=euc-jp
set encoding=utf-8
set termencoding=utf-8
set fileencoding=japan
set fileencodings=utf-8

" teraterm でもカラー表示出来るように。(黒背景はtorte/peachpuff/ronが無難)
set term=builtin_linux
set ttytype=builtin_linux
"colorscheme blue
"colorscheme darkblue
"colorscheme default
"colorscheme delek
"colorscheme desert
"colorscheme elflord
"colorscheme evening
"colorscheme koehler
"colorscheme morning
"colorscheme murphy
"colorscheme pablo
"colorscheme peachpuff
"colorscheme ron
"colorscheme shine
colorscheme torte
"colorscheme zellner
"colorscheme torte
syntax on
